<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backbg"
    tools:context=".addpatientdetails">
    <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:layout_marginLeft="15dp"
    android:id="@+id/titlebarLayout">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Patient"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:typeface="monospace"
        tools:ignore="MissingConstraints" />

</RelativeLayout>

    <LinearLayout
        android:id="@+id/patientDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="26dp"
        android:padding="18dp"
        android:layout_marginHorizontal="16dp"
        android:isScrollContainer="true"
        android:backgroundTint="@color/grey"
        android:background="@drawable/inputfield_design"
        android:layout_below="@+id/titlebarLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details:"
            android:textStyle="bold"
            android:textSize="22sp"
            android:typeface="monospace"
            android:textColor="@color/dark_text"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <EditText
            android:id="@+id/patientName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Patient Full Name"
            android:padding="9dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:typeface="monospace"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Of Birth:"
            android:textStyle="bold"
            android:textSize="22sp"
            android:typeface="monospace"
            android:textColor="@color/dark_text"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <DatePicker
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />
        <EditText
            android:id="@+id/contact_no"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Contact Information"
            android:textColor="@color/white"
            android:typeface="monospace"
            android:padding="9dp"
            android:textColorHint="@color/white"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <TextView
            android:id="@+id/genderlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Gender:"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/dark_text"
            android:typeface="monospace"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:id="@+id/gender"
            >
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="19sp"
                android:textStyle="bold"
                android:id="@+id/Male"
                android:textColor="@color/white"
                android:typeface="monospace"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="19sp"
                android:id="@+id/Female"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:typeface="monospace"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rather not say"
                android:textStyle="bold"
                android:id="@+id/RatherNotSay"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:typeface="monospace"
                />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason Of Visit:"
            android:textColor="@color/dark_text"
            android:textStyle="bold"
            android:textSize="22sp"
            android:typeface="monospace"
            />

        <EditText
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Add Summary Of Visit Here.."
            android:minLines="3"
            android:gravity="top"
            android:padding="9dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vital Signs:"
            android:textStyle="bold"
            android:textColor="@color/dark_text"
            android:textSize="22sp"
            android:typeface="monospace"
            />

        <EditText
            android:id="@+id/vital_signs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="top"
            android:hint="Vital Signs Here.."
            android:minLines="3"
            android:padding="9dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication Prescribed:"
            android:textStyle="bold"
            android:textColor="@color/dark_text"
            android:textSize="22sp"
            android:typeface="monospace"
            />
        <EditText
            android:id="@+id/medication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medicine Here.."
            android:typeface="monospace"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:padding="9dp"
            android:gravity="top"
            android:minLines="3"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes:"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/dark_text"
            android:typeface="monospace"
            />
        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes Here.."
            android:typeface="monospace"
            android:padding="9dp"
            android:textSize="18sp"
            android:gravity="top"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:minLines="3"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/add_patient"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/fullbodybutton"
            android:layout_gravity="center"
            android:text="Add Diagnosis"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>
    </LinearLayout>
</ScrollView>