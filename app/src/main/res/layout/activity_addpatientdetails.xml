<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/mainColor"
    tools:context=".addpatientdetails">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/titlebarLayout">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Patient"
        android:textSize="32sp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:typeface="monospace"
        tools:ignore="MissingConstraints" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/patientDetailsLayout"
        android:layout_width="match_parent"
        android:layout_below="@id/titlebarLayout"
        android:layout_height="wrap_content"
        android:layout_marginVertical="26dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/grey"
        android:background="@drawable/inputfield_design"
        android:orientation="vertical"
        android:padding="32dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details:"
            android:textStyle="bold"
            android:textSize="22sp"
            android:typeface="monospace"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/inputfield_design"
            android:hint="Patient Full Name"
            android:padding="9dp"
            android:textColorHint="@color/backg"
            android:textColor="@color/black"
            android:typeface="monospace"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/inputfield_design"
            android:hint="Date Of Birth"
            android:typeface="monospace"
            android:textColorHint="@color/backg"
            android:textColor="@color/black"
            android:padding="9dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/inputfield_design"
            android:hint="Contact Information"
            android:textColor="@color/black"
            android:typeface="monospace"
            android:padding="9dp"
            android:textColorHint="@color/backg"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Gender:"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:typeface="monospace"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"

            android:id="@+id/gender"
            >
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="19sp"
                android:textStyle="bold"
                android:typeface="monospace"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="19sp"
                android:textStyle="bold"
                android:typeface="monospace"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rather not say"
                android:textStyle="bold"
                android:textSize="19sp"
                android:typeface="monospace"
                />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason Of Visit:"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            android:typeface="monospace"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/inputfield_design"
            android:hint="Add Summary Of Visit Here.."
            android:minLines="5"
            android:padding="9dp"
            android:textColor="@color/black"
            android:textColorHint="@color/backg"
            android:textSize="20sp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vital Signs:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:typeface="monospace"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/inputfield_design"            android:hint="Vital Signs Here.."
            android:typeface="monospace"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="9dp"
            android:minLines="5"
            android:textColorHint="@color/backg"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication Prescribed:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:typeface="monospace"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/inputfield_design"            android:hint="Medicine Here.."
            android:typeface="monospace"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textColorHint="@color/backg"
            android:padding="9dp"
            android:minLines="5"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes:"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:typeface="monospace"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/inputfield_design"            android:hint="Notes Here.."
            android:typeface="monospace"
            android:padding="9dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textColorHint="@color/backg"
            android:minLines="3"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/Addbtn"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/fullbodybutton"
            android:layout_gravity="center"
            android:text="Add Diagnosis"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>

</RelativeLayout>